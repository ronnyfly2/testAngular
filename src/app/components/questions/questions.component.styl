.ctn_question
	width 100%
	max-width 897px
	margin 0 auto
	&_box
		text-align left
	&_item
		width 100%
		height 125px
		border-radius 8px
		box-shadow 0 0 20px 0 rgba(118, 118, 118, 0.16)
		background-color #ffffff
		margin 25.5px auto
		padding 49px 55px
		text-align left
		span
			font-size 20px
			font-weight 900
			font-style normal
			line-height 1.05
			letter-spacing normal
			text-align left
			color #000000
	&_child_item
		position relative
		width 46.82%
		max-width 434px
		height 94.4px
		border-radius 8px
		box-shadow 0 0 20px 0 rgba(190, 190, 190, 0.15)
		background-color #ffffff
		padding 0 26px
		text-align left
		display inline-block
		margin 10.5px 0
		span
			font-size 17px
			font-weight 500
			font-style normal
			font-stretch normal
			line-height 1.28
			letter-spacing normal
			text-align left
			color #504f54
			vertical-align middle
			display inline-block
			width 70%
		&:nth-child(even)
			margin-right 6.29%
		.img
			width 30%
			max-width 60.8px
			height 60.8px
			object-fit contain
			display inline-block
			vertical-align middle
			margin-right 20px
			img
				width 100%
.info_tooltip
	cursor pointer
	position absolute
	top 10px
	right 10px
	&:hover + .ctn_box_toltip
		display block
.ctn_box_toltip
	width 385px
	opacity 0.97
	background-color #1995a0
	padding 23px
	position absolute
	z-index 3
	top 32px
	right -6%
	border-radius 8px
	display none
	&::after
		content ""
		position absolute
		bottom 100%
		right 10%
		margin-left -5px
		border-width 5px
		border-style solid
		border-color transparent transparent #1995a0 transparent
	span
		color white
		font-size 14px
		width 100%
@media screen and (max-width: 992px)
	.ctn_question
		&_child_item
			max-width 100%
			width 100%
			&:nth-child(even)
				margin-right 0
	.ctn_box_toltip
		right 0
		&:after
			right 3.3%
